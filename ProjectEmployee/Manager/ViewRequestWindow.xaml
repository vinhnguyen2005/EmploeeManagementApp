<Window x:Class="ProjectEmployee.ViewRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Requests" Height="662" Width="1122"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        Loaded="Window_Loaded">
    <DockPanel Margin="10" LastChildFill="True">
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="← Back"
                    Width="80"
                    Background="#FF627990"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Height="30"
                    Click="Back_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <ComboBox x:Name="cbStatusFilter"
                      Width="150"
                      Margin="20,0,0,0"
                      FontSize="14"
                      SelectionChanged="StatusFilter_Changed">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Approved"/>
                <ComboBoxItem Content="Rejected"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>
        </StackPanel>
        <!-- Footer Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,10,0,0" MinHeight="40">
            <Button x:Name="btnRevert"
                    Content="↺ Revert"
                    Width="100"
                    Background="#2C3E50"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Height="30"
                    Click="RevertRequest_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnCancel"
                    Content="⛔ Cancel"
                    Width="100"
                    Background="#FFDE5648"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Height="30"
                    Click="CancelRequest_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnEdit"
                    Content="✎ Edit"
                    Width="100"
                    Background="#FF60A24F"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Height="30"
                    Click="EditRequest_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        <!-- DataGrid -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgRequests"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="50"
                      Width="1088"
                      AlternatingRowBackground="#ECF0F1"
                      Background="White"
                      SelectionMode="Single"
                      Margin="0,10"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      CanUserSortColumns="True"
                      SelectionChanged="dgRequests_SelectionChanged"
                      Loaded="dgRequests_Loaded">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" 
                                      Binding="{Binding RequestType}" 
                                      Width="200"/>
                    <DataGridTextColumn Header="Description" 
                                      Binding="{Binding Description}" 
                                      Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Status" 
                                      Binding="{Binding Status}" 
                                      Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Approved">
                                        <Setter Property="Foreground" Value="Green" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                        <Setter Property="Foreground" Value="Red" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                        <Setter Property="Foreground" Value="Blue" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Raise Amount" 
                                      Binding="{Binding RaiseAmountFormatted}" 
                                      Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Date" 
                                      Binding="{Binding CreatedAt, StringFormat=MM/dd/yyyy}" 
                                      Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </DockPanel>
</Window>