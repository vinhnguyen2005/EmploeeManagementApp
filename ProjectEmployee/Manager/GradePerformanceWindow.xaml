<Window x:Class="ProjectEmployee.GradePerformanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grade Performance" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Select Score (1-5):" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbScore" Width="100">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>
            <Button Content="⭐ Save Score" Height="35" Margin="0,10,0,0"
                    Click="SaveButton_Click" Background="#27AE60" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
